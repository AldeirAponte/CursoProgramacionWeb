<div class="container" style="margin-top: 3rem ;">
  <div class="row">
    <div class="col-6 offset-3">
        <h4>Editar un Item de Colección</h4>
        <form action="/admin/coleccion/editar" method="post" class="formulario-editar">
            <input type="hidden" value="{{itemColeccion.id}}" name="id">

            <div class="form-group">
                <label for="">Titulo</label>
                <input type="text" class="form-control" name="titulo" value="{{itemColeccion.titulo}}">
            </div>
            <hr>

            <div class="form-group">
                <label for="">Información</label>
                <textarea type="text" class="form-control" name="informacion">{{itemColeccion.informacion}}</textarea>
            </div>

            <div class="form-group">
                {{!-- ojo aqui al textarea no se le puede poner el atributo value --}}
                <label for="">Imagen</label></br>
                {{!-- <textarea type="text" class="form-control" name="imagen"></textarea> --}}
                <img src="https://via.placeholder.com/150" alt="Ford T (1908)" />
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
  </div>
</div>