<div class="container contenido">
  <div class="row">
    <form action="/admin/login" method="post">
      <div class="mb-3 row">
        <div class="col-sm-10 icon">
          <i class="fa-regular fa-user"></i>
          <input type="text" class="form-control" id="inputUser" placeholder="Usuario" name="usuario" required>     
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10 icon">
          <i class="fa-solid fa-lock"></i>
          <input type="password" class="form-control" id="inputPassword" placeholder="Contraseña" name="password" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary boton">Ingresar</button>
    </form>
    {{#if error}}
      <p>Usuario y/o contraseña incorrectos</p>
    {{/if}}
  </div>
</div>